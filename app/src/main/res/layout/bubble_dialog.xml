<?xml version="1.0" encoding="utf-8"?>
<com.daasuu.bl.BubbleLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        app:bl_arrowDirection="top"
        app:bl_arrowHeight="6dp"
        app:bl_arrowPosition="120dp"
        app:bl_arrowWidth="10dp"
        app:bl_bubbleColor="@android:color/white"
        app:bl_cornersRadius="9dp"
        >
    <TextView
            android:id="@+id/mTvCreateGroup"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/text_create_group"
            android:textSize="@dimen/text_32pt"
            android:textColor="@color/light_black"
            android:gravity="center"
            android:background="@drawable/first_option_bg_selector"
            />
    <TextView
            android:id="@+id/mTvAddFriend"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="48dp"
            android:text="@string/text_add_friend"
            android:textSize="@dimen/text_32pt"
            android:textColor="@color/light_black"
            android:gravity="center"
            android:background="@drawable/last_option_bg_selector"
            />
    <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="48dp"
            android:background="#19000000"
            />
</com.daasuu.bl.BubbleLayout>