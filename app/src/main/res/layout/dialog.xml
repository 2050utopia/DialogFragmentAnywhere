<?xml version="1.0" encoding="utf-8"?>
<com.daasuu.bl.BubbleLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:bl_arrowWidth="10dp"
        app:bl_arrowHeight="10dp"
        app:bl_cornersRadius="5dp"
        app:bl_bubbleColor="#7f000000"
        app:bl_arrowDirection="bottom"
        app:bl_arrowPosition="100dp"
        >
    <CheckBox
            android:id="@+id/mOp1"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginLeft="7dp"
            android:background="@drawable/disable_mic_selector"
            android:button="@null"
            android:checked="false"
            />
    <ImageButton
            android:id="@+id/mOp2"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginLeft="45dp"
            android:background="@drawable/list_item_state_black_selector"
            android:src="@drawable/ic_op"
            />
    <ImageButton
            android:id="@+id/mOp3"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginLeft="83dp"
            android:background="@drawable/list_item_state_black_selector"
            android:src="@drawable/ic_op"
            />
    <ImageButton
            android:id="@+id/mOp4"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginLeft="121dp"
            android:background="@drawable/list_item_state_black_selector"
            android:src="@drawable/ic_op"
            />
    <ImageButton
            android:id="@+id/mOp5"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginLeft="159dp"
            android:background="@drawable/list_item_state_black_selector"
            android:src="@drawable/ic_op"
            />
</com.daasuu.bl.BubbleLayout>